    <profiles>  
        <profile>  
            <id>hornetQ</id>  
            <build>
                <defaultGoal>exec:java</defaultGoal>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <mainClass>org.jbpm.task.utils.TaskServerLauncher</mainClass>
                            
                            <argument>-classpath</argument>
                            <classpath/>
                            
                            <commandlineArgs>
                                 --impl=HORNETQ --port=9124 --users=src/test/resources/org/jbpm/task/LoadUsers.mvel --groups=src/test/resources/org/jbpm/task/LoadGroups.mvel 
                                 --persistenceUnit=org.jbpm.task
                            </commandlineArgs>
         
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
        <profile>  
            <id>mina</id>  
