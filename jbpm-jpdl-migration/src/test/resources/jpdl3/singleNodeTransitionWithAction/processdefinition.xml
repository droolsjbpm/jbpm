<?xml version="1.0" encoding="UTF-8"?>

<process-definition  xmlns="urn:jbpm.org:jpdl-3.2"  name="SingleTransitionWithAction">

	<start-state name="start-state">
		<description>
			A start-state.
		</description>
		<transition to="node" />
	</start-state>

	<node name="node">
		<transition name="to_state" to="end-state">
			<action class="org.jboss.qa.brms.jbpm.migration.tools.jpdl.handlers.DefaultActionHandler" />
            <description>
                A transition with action.
            </description>
		</transition>        
	</node>

	<end-state name="end-state" />

</process-definition>