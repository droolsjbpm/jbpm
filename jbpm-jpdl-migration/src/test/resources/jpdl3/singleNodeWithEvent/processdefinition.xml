<?xml version="1.0" encoding="UTF-8"?>

<process-definition  xmlns="urn:jbpm.org:jpdl-3.2"  name="SingleNodeWithEvent">

	<start-state name="start-state">
		<description>
			A start-state.
		</description>
		<transition to="node" />
	</start-state>

	<node name="node">
		<description>
			A node with event.
		</description>
		<event type="node-enter">
            <action class="org.jboss.handler.TestHandlerEnter" />
        </event>
        <event type="node-leave">
            <action class="org.jboss.handler.TestHandlerLeave" />
        </event>
		<transition to="end-state" />
	</node>

	<end-state name="end-state" />

</process-definition>