<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:fb='urn:import:org.jbpm.formbuilder.client'>

  <g:HTMLPanel height="100%" width="100%">
    <table cellpadding="0" cellspacing="0" border="1">
      <tr height="30">
        <td colspan="3"><g:SimplePanel height="30px" width="990px" ui:field="optionsView"/></td>
      </tr>
      <tr height="400">
        <td width="230">
          <g:TabLayoutPanel width="230px" height="400px" barHeight="30" barUnit="PX" >
            <g:tab selected="true">
              <g:header>Menu</g:header>
              <g:ScrollPanel height="360px" width="220px" ui:field="menuView"/>
            </g:tab>
            <g:tab>
              <g:header>Tree</g:header>
              <g:ScrollPanel height="360px" width="220px" ui:field="treeView"/>
            </g:tab>
            <g:tab>
              <g:header>Edition</g:header>
              <g:ScrollPanel height="360px" width="220px" ui:field="editionView"/>
            </g:tab>
          </g:TabLayoutPanel>
        </td>
        <td width="610">
          <table>
            <tr>
              <td height="350" width="610"><g:SimplePanel height="350px" width="610px" ui:field="layoutView"/></td>
            </tr>
            <tr height="1"><td width="610" style="background-color:black;"></td></tr>
            <tr>
              <td height="49" width="610"><g:AbsolutePanel height="50px" width="610px" ui:field="toolBarView"/></td>
            </tr>
          </table>
        </td>
        <td width="150"><g:AbsolutePanel height="100%" width="150px" ui:field="tasksView"/></td>
      </tr>
      <tr>
        <td colspan="3" height="100"><g:FocusPanel height="100px" width="100%" ui:field="notificationsView"/></td>
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder>